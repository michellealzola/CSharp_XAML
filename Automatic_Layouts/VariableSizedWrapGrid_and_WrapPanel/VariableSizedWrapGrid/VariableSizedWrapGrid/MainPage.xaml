        </Button>
        <Button FontSize="50"
                Width="200"
                Background="Beige"
                CornerRadius="5"
                Margin="10">
            4
        </Button>
        <Button FontSize="50"
                Width="200"
                Background="Beige"
                CornerRadius="5"
                Margin="10">
            5
        </Button>
        <Button FontSize="50"
                Width="200"
                Background="Beige"
                CornerRadius="5"
                Margin="10">
            6
        </Button>
        <Button FontSize="50"
                Width="200"
                Background="Beige"
                CornerRadius="5"
                Margin="10">
            7
        </Button>
        <Button FontSize="50"
                Width="200"
                Background="Beige"
                CornerRadius="5"
                Margin="10">
            8
        </Button>
        <Button FontSize="50"
                Width="200"
                Background="Beige"
                CornerRadius="5"
                Margin="10">
            9
        </Button>

    </VariableSizedWrapGrid>
</Page>
