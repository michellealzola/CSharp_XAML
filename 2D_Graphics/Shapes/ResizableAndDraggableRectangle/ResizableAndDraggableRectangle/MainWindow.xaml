<Window x:Class="ResizableAndDraggableRectangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResizableAndDraggableRectangle"
        mc:Ignorable="d"
        Title="Rezisable and Draggable Rectangle"
        Height="450"
        Width="800">
    <Grid>
        <Canvas x:Name="MainCanvas"
                Background="AliceBlue"
                Margin="10">
            <Rectangle x:Name="DraggableRectangle"
                       Fill="Brown"
                       Width="100"
                       Height="100"
                       Canvas.Left="50"
                       Canvas.Top="50"
                       MouseLeftButtonDown="Rectange_MouseLeftButtonDown"
                       MouseLeftButtonUp="Rectangle_MouseLeftButtonUp"
                       MouseMove="Rectangle_MouseMove" />
        </Canvas>

    </Grid>
</Window>
