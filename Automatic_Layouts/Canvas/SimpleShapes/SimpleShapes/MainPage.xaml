<Page
    x:Class="SimpleShapes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleShapes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--Create a Canvas and add a Rectangle and Ellipse to it.
    Position them using the Canvas.Left and Canvas.
    Top properties.-->

    <Canvas>
        <Rectangle Width="100" 
                   Height="50"
                   Fill="Blue"
                   Canvas.Left="50"
                   Canvas.Top="20"/>
        <Ellipse Width="75" 
                 Height="75"
                 Fill="Green"
                 Canvas.Left="200"
                 Canvas.Top="100"/>
    </Canvas>
</Page>
