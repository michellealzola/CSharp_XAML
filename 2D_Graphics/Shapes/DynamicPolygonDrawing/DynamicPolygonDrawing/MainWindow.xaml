<Window x:Class="DynamicPolygonDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicPolygonDrawing"
        mc:Ignorable="d"
        Title="Dynamic Polygon Drawing"
        Height="450"
        Width="800">
    
    <Grid>
        <Canvas x:Name="DrawingCanvas"
                Background="AliceBlue"
                Margin="10"
                MouseLeftButtonDown="DrawingCanvas_MouseLeftButtonDown" />
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10">
            <Button Content="Clear"
                    Margin="5"
                    Click="ClearButton_Click" />
            <Button Content="Close Polygon"
                    Margin="5"
                    Click="ClosePolygonButton_Click" />

        </StackPanel>

    </Grid>
</Window>
