<Page
    x:Class="HorizontalStackPanel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HorizontalStackPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Top"
                Margin="10,10,10,10">
        <Button Content="Home" 
                Width="100"
                Height="40"
                Background="DarkMagenta"
                Foreground="White"
                Margin="0,0,10,0"
                CornerRadius="5"/>
        <Button Content="About"
                Width="100"
                Height="40"
                Background="DarkMagenta"
                Foreground="White"
                Margin="0,0,10,0"
                CornerRadius="5" />
        <Button Content="Shop"
                Width="100"
                Height="40"
                Background="DarkMagenta"
                Foreground="White"
                Margin="0,0,10,0"
                CornerRadius="5" />
        <Button Content="Contact"
                Width="100"
                Height="40"
                Background="DarkMagenta"
                Foreground="White"
                Margin="0,0,10,0"
                CornerRadius="5" />

    </StackPanel>
</Page>

